<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgUkulele"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/ukulele"
        app:srcCompat="@drawable/ukulele"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/btnUkulele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgUkulele"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btnUkulele"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imgDrums"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_below="@id/btnUkulele"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/drums"
        app:srcCompat="@drawable/drums"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/btnDrums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgDrums"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btnDrums"
        android:textSize="22sp" />

</RelativeLayout>